{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "jsx-quotes": [2, "prefer-double"],
    "arrow-parens": "error",
    "no-lonely-if": "error",
    "max-len": ["warn", {
      "ignoreComments": true,
      "ignoreRegExpLiterals": true,
      "ignoreUrls": true
    }]
  }
}
